#!/bin/zsh

x=$(shuf -i 0-7 -n 1)
project_dir="/home/zhy7ne/Projects/dotFILES/scripts"

if [ $x = 0 ]; then
    exit
fi

for i in $(seq 1 $x);
do
    ts=$(date +%s)
    echo "$ts" > $project_dir/.auto.txt
    git -C $project_dir add .
    git -C $project_dir commit -m "auto commit - $ts"
done

if [ $1 = "p" ]; then
    git -C $project_dir push
else
    exit
fi
